<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:background="@drawable/titlecloud"
            android:backgroundTint="@color/colorWhite"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poiret_one"
            android:text="@string/app_name"
            android:layout_marginTop="-18dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="45sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textBottom"
        android:layout_margin="15dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effects_sign_in"
            android:fontFamily="@font/baumans"
            android:text="Sign in"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@drawable/ripple_effects_register"
            android:fontFamily="@font/baumans"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:text="Register" />
    </LinearLayout>

    <TextView
        android:id="@+id/textBottom"
        android:layout_alignParentBottom="true"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/baumans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/sign_in_text"/>

</RelativeLayout>